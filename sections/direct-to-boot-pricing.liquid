<div class="page-width dtb-pricing {% if section.settings.background-color %}section--background-gray {% endif %}" id="direct-to-boot-pricing">
  
  <div class="grid justify-center">
    <div class="grid__item medium-up--one-half justify-center">
      <h2 class="section-header__title text-center">
        {{ section.settings.title | escape }}
      </h2>
    <p class="text-center">{{ section.settings.text | escape }}</p>
    {%- if section.settings.button_label != blank  -%}
              <div class="appear-delay{% cycle '','-1','-2','-3','-4' %} button-link">
                <a href="{{ section.settings.button_link }}" class="btn--rounded btn--green">
                  {{ section.settings.button_label }}
                </a>
              </div>
        {%- endif -%}
    </div>
   
  </div>
  

</div>
{% schema %}
    {
        "name": "Direct to boot pricing",
        "settings": [
            {
              "type": "checkbox",
              "id": "background-color",
              "label": "Section background color"
            },                  
            {
              "type": "text",
              "id": "title",
              "label": "Section title"
            },          
            {
              "type": "text",
              "id": "text",
              "label": "Text"
            },
            {
              "type": "text",
              "id": "button_label",
              "label": "Button label"
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "Button link"
            }
             
        ],
        "presets": [
        {
          "name": "Direct to boot pricing"
        }
      ]
 }
{% endschema %}
    