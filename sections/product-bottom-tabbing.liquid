<div class="page-width">
	<div class="grid">
         <!-- Blocks -->
         {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when "box-tab" -%}
                    <div class="grid__item medium-up--one-half">
                        <div class="product--box-bottom">
                            <ul class="tabsa item-desc-tabs__nav">
                                <li class="taba nav-item active" data-content-id="tab-content-4">  
                                    <div class="nav-link"> {{block.settings.tab-1}}</div>   
                                </li>
                                {%- if block.settings.tab-2 != blank -%}
                                    <li class="taba nav-item" data-content-id="tab-content-5">  
                                        <div class="nav-link"> {{block.settings.tab-2}}</div>   
                                    </li>
                                {%- endif -%}
                                {%- if block.settings.tab-3 != blank -%}
                                    <li class="taba nav-item" data-content-id="tab-content-6">  
                                        <div class="nav-link"> {{block.settings.tab-3}}</div>   
                                    </li>
                                {%- endif -%}                              
                            </ul>
                            <div id="tab-content-4" class="tab-contenta item-desc-tabs__content active">           
                                {{block.settings.code-1}}
                            </div>
                            {%- if block.settings.code-2 != blank -%}
                                <div id="tab-content-5" class="tab-contenta item-desc-tabs__content">           
                                    {{block.settings.code-2}}
                                </div>
                            {%- endif -%}
                            {%- if block.settings.code-3 != blank -%}
                                <div id="tab-content-6" class="tab-contenta item-desc-tabs__content">           
                                    {{block.settings.code-3}}
                                </div>
                        {%- endif -%}                                          
                    </div>
                    </div>
                {%- when "box-single" -%}
                    <div class="grid__item medium-up--one-half">
                        <div class="product--box-bottom product--box-single">
                                <div class="nav-link"> {{block.settings.box-heading}}</div>                              
                            <div class="item-desc-tabs__content active">           
                                {{block.settings.code-4}}
                            </div>
                        </div>
                    </div>
            {%- endcase -%}
                   
         {%- endfor -%}
	</div>		  
</div>

  
{% schema %}
      {
        "name": "Product bottom tabbing",
        "class":"product--bottom-tabbing",
        "blocks":[
        {
            "type": "box-tab",
            "name": "Box with tabs",
            "settings": [
            {
                "type": "text",
                "id": "tab-1",
                "label": "Tab 1 Heading"
            },
            {
                "type": "liquid",
                "id": "code-1",
                "label": "Content tab 1"
            },
            {
                "type": "text",
                "id": "tab-2",
                "label": "Tab 2 Heading"
            },
        
            {
                "type": "liquid",
                "id": "code-2",
                "label": "Content tab 2"
            },
            {
                "type": "text",
                "id": "tab-3",
                "label": "Tab 3 Heading"
            },
    
            {
                "type": "liquid",
                "id": "code-3",
                "label": "Content tab 3"
            }
            ]
        },
        {
            "type": "box-single",
            "name": "Box single",
            "settings": [
            {
                "type": "text",
                "id": "box-heading",
                "label": "Box heading"
            },
    
            {
                "type": "liquid",
                "id": "code-4",
                "label": "Box content"
            }
            
            ]
        }
        ],

        "presets": [
          {
            "name": "Product bottom tabbing"
          }
        ]
      }
    {% endschema %}
  
  
  <script>
  
	tabsa= document.querySelectorAll('.taba');
		  tabContentsa= document.querySelectorAll('.tab-contenta');
   
		  tabsa.forEach(function(taba){
			  taba.addEventListener('click',function(){
   
				  contentId = this.dataset.contentId;
				  content = document.getElementById(contentId);
   
				  tabContentsa.forEach(function(content){
					  content.classList.remove('active');
				  });
   
				  tabsa.forEach(function(taba){
					  taba.classList.remove('active');
				  });
   
				  this.classList.add('active');
				  content.classList.add('active');
			  });
		  });
	
  
	$(document).ready(function(){ 
	  setTimeout(function(){ 
		  $("#jm-review-widget").insertAfter("#shopify-section-product-recommendations");
	}, 500); 
  });
  
  
  </script>