<div
  class="press-releases-section press-releases-{{ section.id }}{% if section.settings.color_background == settings.color_body_bg %} press-releases-section--with-divider{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="press-releases"
  data-aos
>
  {%- if section.settings.title != blank -%}
    <div class="page-width">
        <h2 class="section-header__title text-center">{{ section.settings.title | escape }}</h2>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
  <div class="press-releases-wrapper">
    <div class="grid grid--uniform grid--flush-bottom">
      {%- for block in section.blocks -%}
        <div class="press-release grid__item medium-up--one-third text- aos-init aos-animate">
          {%- if block.settings.image != blank -%}
            <div class="image-wrap text-spacing" style="height: 0; padding-bottom: {{ 70 | divided_by: block.settings.image.aspect_ratio }}%;">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt }}">
            </div>
          {%- else -%}
            <div class="image-wrap text-spacing">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
          {%- endif -%}

          {%- if block.settings.button_label != blank -%}
          <div class="box--link">
            <a href="{{ block.settings.button_link }}" target="_blank" class="btn btn--secondary btn--small">
              {{ block.settings.button_label }}
            </a>
          </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Press Releases",
  "class": "index-section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Press Release"
    }
  ],
  "blocks": [
    {
      "type": "press",
      "name": "Press",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Press logo"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Releases",
      "blocks": [
        {
          "type": "press"
        },
        {
          "type": "press"
        },
        {
          "type": "press"
        },
        {
          "type": "press"
        },
        {
          "type": "press"
        }
      ]
    }
  ]
}

{% endschema %}
